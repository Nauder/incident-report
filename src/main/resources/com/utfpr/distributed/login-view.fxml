<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="201.0" prefWidth="251.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.utfpr.distributed.controller.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label fx:id="lErro" textFill="RED" />
   <Label text="E-Mail" />
   <TextField fx:id="tEmail" />
   <Label text="Senha" />
   <TextField fx:id="tSenha" />
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <Button mnemonicParsing="false" onAction="#onSubmit" text="Entrar">
            <HBox.margin>
               <Insets right="20.0" />
            </HBox.margin>
         </Button>
         <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onRegistrarButtonClick" text="Cadastrar" />
      </children>
   </HBox>
</VBox>
